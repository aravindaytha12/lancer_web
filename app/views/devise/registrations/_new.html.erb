<!-- Modal -->
<div class="modal fade" id="signupModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-center" id="signUpTitle">Sign Up</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.email_field :email, required: true, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, required: true, autocomplete: "new-password", placeholder: "Password", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.password_field :password_confirmation, required: true, autocomplete: "new-password", placeholder: "Password", class: "form-control" %>
          </div>
 
          <br/>
          <div class="actions">
            <%= f.submit "Sign Up", class: "btn btn-info btn-block" %>
          </div>
          <br/>
          <div class="actions">
            <%= link_to "Continue with Google", user_google_oauth2_omniauth_authorize_path, :class => "btn btn-info btn-block" %>
          </div>
          <br/>
          <div class="actions">
            <%= link_to "Continue with Facebook", '#', :class => "btn btn-info btn-block" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>